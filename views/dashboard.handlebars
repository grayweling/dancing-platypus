    <button type="button" id="platypus"><img src="./images/cartoon-platypus.png" width="400" height"600" class="center"/></button> }}
  
  <p id="timerClick" style="display: none">Time :<span id="runTime">60</span></p>
  <p id="imageClick" style="display: none">Counter: <span id="runClick">0</span></p>

  <br>
  <br>
  
  <img
    src="./images/cartoon-platypus.png"
    alt="cartoon"
    width="400"
    class="center"
    id="cartoonImage"
    onClick="flipImage()"
  />

  <script>

    var x = true; 
    var t = 60;
    var c = 0;
    var d;

function showtime() {
    t--;
    document.getElementById('runTime').innerText = t;
}

function start() {
    document.getElementById('timerClick').style.display = "block";
    document.getElementById('imageClick').style.display = "block";
    d = setInterval(showtime, 1000);
}
function stop() {
    document.getElementById('timerClick').style.display = "none";
    document.getElementById('cartoonImage').style.display = "none";
    clearInterval(d);
}
    function flipImage() { 
        c++;
    document.getElementById('runClick').innerText = c;

        if ( t === 60) {
            start();
        } 
        
        if ( t < 0 ) {
            stop();   
        }
        
        
        if (x) { 
            x = false;
            document.getElementById('cartoonImage').style.transform = 'scaleX(-1)'; 
            } else { 
                x = true; 
                document.getElementById('cartoonImage').style.transform = 'scaleX(1)'; 
                } 
            }
  </script>
